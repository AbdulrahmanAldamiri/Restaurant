@model Restaurant.ViewModels.HomeModel
@{
    ViewData["Title"] = "Contact";
}



<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/breath.jpg);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Contact us</h3>
            <ul>
                <li>
                    <a href="/Home/Index">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-message-wrapper">
                    <h4 class="contact-title mb-25">Leave Us a Message</h4>
                    <div class="contact-message">
                        <form id="contact-form" asp-action="Contact">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <label asp-for="TransactionContactUs.TransactionContactUsFullName" class="control-label"></label>
                                        <input asp-for="TransactionContactUs.TransactionContactUsFullName" class="form-control" placeholder="Full Name" />
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsFullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <label asp-for="TransactionContactUs.TransactionContactUsEmail" class="control-label"></label>
                                        <input asp-for="TransactionContactUs.TransactionContactUsEmail" class="form-control" placeholder="Email Address" />
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style mb-20">
                                        <label asp-for="TransactionContactUs.TransactionContactUsSubject" class="control-label"></label>
                                        <input asp-for="TransactionContactUs.TransactionContactUsSubject" placeholder="Subject" class="form-control" />
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsSubject" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style">
                                        <label asp-for="TransactionContactUs.TransactionContactUsMessage" class="control-label"></label>
                                        <textarea asp-for="TransactionContactUs.TransactionContactUsMessage" class="form-control" placeholder="Message"> </textarea>
                                        <span asp-validation-for="TransactionContactUs.TransactionContactUsMessage" class="text-danger"></span>
                                        @*<textarea name="message" placeholder="Message"></textarea>*@
                                        <button class="submit btn-style" type="submit">SEND MESSAGE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="form-messege"> @Html.Raw(ViewBag.SuccessMessage)
                        </p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info-area">
                    <h4 class="contact-title mb-18">Contact Us</h4>
                    <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                    <div class="contact-info-wrap">
                        <div class="single-contact-info mb-40">
                            <div class="contact-info-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>Location :</h4>
                                <p>@Model.SystemSetting.SystemSettingMapLocation</p>
                            </div>
                        </div>
                        <div class="single-contact-info mb-35">
                            <div class="contact-info-icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>phone :</h4>
                                @Html.Raw(Model.SystemSetting.SystemSettingPhoneNumber)
                            </div>
                        </div>
                        <div class="single-contact-info">
                            <div class="contact-info-icon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>mail :</h4>
                                @Html.Raw(Model.SystemSetting.SystemSettingEmail)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="map-area pt-100">
            <div id="googleMap"></div>
        </div>
    </div>
</div>
<div class="pt-50"></div>