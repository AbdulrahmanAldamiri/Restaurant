@model Restaurant.ViewModels.HomeModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Basmoti - Restaurant Bootstrap 5 Template</title>
    <meta name="description" content="">
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>
    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>

    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div>
        <header class="header-area transparent-bar header-black">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                        <div class="logo">
                            <a href="/Home/Index">
                                <img alt="" src="~/images/SystemSettingImages/@Model.SystemSetting.SystemSettingLogoImageUrl2">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                        <div class="menu-search-bundle">
                            <div class="main-menu">
                                <nav>
                                    <ul>
                                        @foreach (var item in Model.MasterMenuList)
                                        {

                                            <li class="top-hover">
                                                <a href="@item.MasterMenuUrl"> @item.MasterMenuName </a>

                                            </li>
                                        }
                                        @*<li class="top-hover">
                                            <a href="index.html">home </a>

                                        </li>
                                        <li><a href="about-us.html">about</a></li>
                                        <li class="mega-menu-position top-hover">
                                            <a href="menu.html">menu</a>

                                        </li>

                                        <li><a href="contact.html">contact us</a></li>*@
                                    </ul>
                                </nav>
                            </div>                            
                        </div>
                    </div>
                    <div class="mobile-menu-area d-md-block d-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul class="menu-overflow">
                                    @foreach (var item in Model.MasterMenuList)
                                    {
                                        <li>
                                            <a href="@item.MasterMenuUrl">@item.MasterMenuName</a>
                                        </li>

                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
        <footer class="footer-area">
            <div class="footer-area-top black-bg pt-95 pb-60">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>About Us</h4>
                                </div>
                                <div class="footer-about">
                                    <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>
                                    <div class="footer-map">
                                        <a href="/Home/Contact"><i class="ion-ios-location-outline"></i> View on map</a>
                                    </div>
                                </div>
                                <div class="social-icon">
                                    <ul>
                                        @foreach (var item in Model.MasterSocialMediaList)
                                        {
                                            <li><a class="@item.MasterSocialMediaClass" href="@item.MasterSocialMediaUrl">@Html.Raw(item.MasterSocialMediaImageUrl)</a></li>

                                        }
                                        @*<li><a class="facebook" href="#"><i class="ion-social-facebook"></i></a></li>
                                        <li><a class="twitter" href="#"><i class="ion-social-twitter"></i></a></li>
                                        <li><a class="instagram" href="#"><i class="ion-social-instagram-outline"></i></a></li>
                                        <li><a class="googleplus" href="#"><i class="ion-social-googleplus-outline"></i></a></li>
                                        <li><a class="dribbble" href="#"><i class="ion-social-dribbble-outline"></i></a></li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>contact Us</h4>
                                </div>
                                <div class="footer-cont-info">
                                    <div class="single-footer-cont-info">
                                        <div class="cont-info-icon">
                                            <i class="fa fa-home"></i>
                                        </div>
                                        <div class="cont-info-content">
                                            <p>@Model.SystemSetting.SystemSettingMapLocation</p>
                                        </div>
                                    </div>
                                    <div class="single-footer-cont-info">
                                        <div class="cont-info-icon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        <div class="cont-info-content">
                                            @Html.Raw(Model.SystemSetting.SystemSettingPhoneNumber)
                                        </div>
                                    </div>
                                    <div class="single-footer-cont-info">
                                        <div class="cont-info-icon">
                                            <i class="fa fa-envelope"></i>
                                        </div>
                                        <div class="cont-info-content">
                                            @Html.Raw(Model.SystemSetting.SystemSettingEmail)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>Opening Time</h4>
                                </div>
                                <div class="open-time pr-30">
                                    <ul>
                                        @foreach (var item in Model.MasterWorkingHourList)
                                        {
                                            <li>
                                                @item.MasterWorkingHourIdName
                                                <span>@item.MasterWorkingHourIdTimeFormTo</span>
                                            </li>
                                        }
                                        @*<li>
                                        Sunday
                                        <span>Close</span>
                                        </li>
                                        <li>
                                        Monday
                                        <span>9am - 11pm</span>
                                        </li>
                                        <li>
                                        Tuesday
                                        <span>9am - 11pm</span>
                                        </li>
                                        <li>
                                        Wednesday
                                        <span>9am - 11pm</span>
                                        </li>
                                        <li>
                                        Thursday
                                        <span>9am - 11pm</span>
                                        </li>
                                        <li>
                                        Friday
                                        <span>9am - 11pm</span>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="footer-widget mb-40">
                                <div class="footer-title mb-30">
                                    <h4>Newsletter</h4>
                                </div>
                                <div class="newsletter-style">
                                    <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do.</p>
                                    <div id="mc_embed_signup" class="subscribe-form ">
                                        <form id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" asp-action="NewsLetter">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div id="mc_embed_signup_scroll" class="mc-form">
                                                <label asp-for="TransactionNewsletter.TransactionNewsletterEmail" class="control-label"></label>
                                                <input asp-for="TransactionNewsletter.TransactionNewsletterEmail" class="email" placeholder="Email"/>
                                                <span asp-validation-for="TransactionNewsletter.TransactionNewsletterEmail" class="text-danger"></span>
                                                <div class="clear">
                                                    <input id="mc-embedded-subscribe" name="test" class="button" type="submit" value="Subscribe">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom black-bg-2 pb-25 pt-25">
                <div class="container">
                    <div class="copyright text-center">
                        @Html.Raw(Model.SystemSetting.SystemSettingCopyright)
                    </div>
                </div>
            </div>
        </footer>

        <script src="~/assets/js/popper.js"></script>
        <script src="~/assets/js/bootstrap.min.js"></script>
        @*<script src="~/assets/js/ajax-mail.js"></script>*@
        <script src="~/assets/js/plugins.js"></script>
        <script src="~/assets/js/main.js"></script>
    </div>
</body>
</html>
