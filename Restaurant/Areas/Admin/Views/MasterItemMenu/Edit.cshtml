@model Restaurant.ViewModels.MasterItemMenuModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Home">Home</a></li>
            <li class="breadcrumb-item"><a href="/Admin/MasterItemMenu">MasterItemMenu</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MasterItemMenuId" />
            <div class="form-group">
                <label asp-for="MasterCategoryMenuId" class="control-label"></label>
                <select asp-for="MasterCategoryMenuId" class="form-control" asp-items=@(new SelectList(ViewBag.List,"MasterCategoryMenuId","MasterCategoryMenuName"))></select>

                <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuTitle" class="control-label"></label>
                <input asp-for="MasterItemMenuTitle" class="form-control" />
                <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuBreef" class="control-label"></label>
                <input asp-for="MasterItemMenuBreef" class="form-control" />
                <span asp-validation-for="MasterItemMenuBreef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuDesc" class="control-label"></label>
                <input asp-for="MasterItemMenuDesc" class="form-control" />
                <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuPrice" class="control-label"></label>
                <input asp-for="MasterItemMenuPrice" class="form-control" />
                <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                <img src="~/images/@Model.MasterItemMenuImageUrl" style="max-width:100px" />
            </div>
            <div class="form-group" hidden>
                <label asp-for="MasterItemMenuImageUrl" class="control-label"></label>
                <input asp-for="MasterItemMenuImageUrl" class="form-control" />
                <span asp-validation-for="MasterItemMenuImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasterItemMenuDate" class="control-label"></label>
                <input asp-for="MasterItemMenuDate" class="form-control" />
                <span asp-validation-for="MasterItemMenuDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" hidden/>
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreateUser" class="control-label"></label>
                <input asp-for="CreateUser" class="form-control" hidden/>
                <span asp-validation-for="CreateUser" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" hidden />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

